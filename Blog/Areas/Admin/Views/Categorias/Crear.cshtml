@model Blog.Models.Categoria 

@{
    ViewData["Title"] = "Crear Categoria";
}

<h1>Crear Categoria</h1>

<hr />

<div class="row p-4">
    <div class="col-4 offset-4">
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre de la Categoría" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group row mt-4">
                <div class="col-6">
                    <input type="submit" value="Crear Categoria" class="btn btn-primary form-control" />
                </div>
                <div class="col-6">
                    <a class="btn btn-secondary form-control" asp-action="Index">Volver a lista</a>
                </div>
            </div>
        </form>
    </div>
</div>


